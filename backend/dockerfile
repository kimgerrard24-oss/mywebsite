# ---------- Stage 1: Build ----------
FROM node:22-slim AS build

WORKDIR /app

# ติดตั้ง openssl เพื่อให้ Prisma เลือก engine openssl-3.x
RUN apt-get update -y && apt-get install -y openssl

# ปรับ npm config
RUN npm set registry https://registry.npmmirror.com \
    && npm set fetch-retries 5 \
    && npm set fetch-retry-factor 10 \
    && npm set fetch-retry-mintimeout 20000 \
    && npm set fetch-retry-maxtimeout 120000 \
    && npm set strict-ssl false

# -------------------------------------------------------
# COPY package.json + lockfile ก่อนเพื่อลด cache ปัญหา
# -------------------------------------------------------
COPY package*.json ./

# ติดตั้ง dependencies
RUN --mount=type=cache,target=/root/.npm npm ci

# -------------------------------------------------------
# COPY src + prisma + tsconfig ทำเป็น step แยกจาก package.json
# เพื่อ ensure ว่า code เปลี่ยน = rebuild dist ใหม่เสมอ
# -------------------------------------------------------
COPY tsconfig*.json ./
COPY prisma ./prisma
COPY src ./src

# Generate Prisma Client (บังคับใช้ engine 3.x)
RUN npx prisma generate --schema=prisma/schema.prisma

# Build NestJS source
RUN npm run build


# ---------- Stage 2: Runtime ----------
FROM node:22-slim AS runner

WORKDIR /app

RUN apt-get update -y \
    && apt-get install -y openssl curl \
    && rm -rf /var/lib/apt/lists/*

ENV NODE_ENV=production
ENV PORT=4001
ENV DOCKER_ENV=true
ENV REDIS_URL=redis://redis:6379

COPY package*.json ./

# ===== COPY PRISMA ENGINES + CLIENT =====
COPY --from=build /app/node_modules/.prisma /app/node_modules/.prisma
COPY --from=build /app/node_modules/@prisma /app/node_modules/@prisma

# Copy node_modules (หลัง .prisma เพื่อไม่ทับ engine)
COPY --from=build /app/node_modules /app/node_modules

# Copy build output
COPY --from=build /app/dist ./dist

# Copy prisma folder (migration/schema)
COPY --from=build /app/prisma ./prisma

EXPOSE 4001

CMD ["node", "dist/main.js"]
