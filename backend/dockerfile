# ---------- Stage 1: Build ----------
FROM node:22-slim AS build

WORKDIR /app

# ติดตั้ง openssl (จำเป็นมาก เพื่อให้ Prisma เลือก engine รันบน openssl-3.0.x)
RUN apt-get update -y && apt-get install -y openssl

RUN npm set registry https://registry.npmmirror.com \
    && npm set fetch-retries 5 \
    && npm set fetch-retry-factor 10 \
    && npm set fetch-retry-mintimeout 20000 \
    && npm set fetch-retry-maxtimeout 120000 \
    && npm set strict-ssl false

COPY package*.json ./

RUN --mount=type=cache,target=/root/.npm npm ci

# copy full project including prisma/
COPY . .

# Generate Prisma Client (บังคับให้ใช้ engine 3.0.x)
RUN npx prisma generate --schema=prisma/schema.prisma

RUN npm run build


# ---------- Stage 2: Runtime ----------
FROM node:22-slim AS runner

WORKDIR /app

RUN apt-get update -y \
    && apt-get install -y openssl curl \
    && rm -rf /var/lib/apt/lists/*

ENV NODE_ENV=production
ENV PORT=4001
ENV DOCKER_ENV=true
ENV REDIS_URL=redis://redis:6379

COPY package*.json ./


# ===== COPY PRISMA ENGINES + CLIENT =====
COPY --from=build /app/node_modules/.prisma /app/node_modules/.prisma
COPY --from=build /app/node_modules/@prisma /app/node_modules/@prisma
# ========================================

# Copy node_modules หลังจาก copy .prisma แล้ว (ไม่ทับไฟล์ engine)
COPY --from=build /app/node_modules /app/node_modules

# Build output
COPY --from=build /app/dist ./dist

# Prisma schema folder
COPY --from=build /app/prisma ./prisma

EXPOSE 4001

CMD ["node", "dist/main.js"]
