# ---------- Stage 1: Builder ----------
FROM node:22-slim AS build

WORKDIR /app
ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_OPTIONS="--max-old-space-size=4096"

# Copy only package files first (better cache)
COPY package*.json ./

# Set registry fallback (faster in Asia)
RUN npm set registry https://registry.npmmirror.com \
    && npm set fetch-retries 5 \
    && npm set fetch-retry-factor 10

RUN --mount=type=cache,target=/root/.npm \
    npm ci

# Copy project files AFTER install (avoid invalid cache)
COPY . .

# Ensure next binary exists
RUN chmod +x node_modules/.bin/next

# Build Next.js
RUN --mount=type=cache,target=/root/.npm \
    npm run build


# ---------- Stage 2: Runner ----------
FROM node:22-slim AS runner

WORKDIR /app
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_OPTIONS="--max-old-space-size=4096"

RUN apt-get update -y \
    && apt-get install -y openssl curl \
    && rm -rf /var/lib/apt/lists/*

COPY package*.json ./

# Copy build artifacts
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/public ./public
COPY --from=build /app/.next ./.next
COPY --from=build /app/next.config.js ./next.config.js

# Copy environment file from GitHub Actions
COPY --from=build /app/.env.production ./.env.production

EXPOSE 3000

CMD ["npm", "run", "start"]
